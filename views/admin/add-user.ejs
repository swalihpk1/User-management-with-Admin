<%-include('../layouts/header')-%>

<a href="/admin/home">Go back</a>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-5">
          <div class="card text-white" style="border-radius: 25px;">
            <div class="card-body p-md-5 bg-dark">
              <div class="row justify-content-center">
                
  
                  <p class="text-center h1 fw-bold mb-3 mx-1 mx-md-4 mt-4">Add user</p>
                                    
                  <% if(typeof message !== 'undefined'){ %>

                   <h5 class="text-center m-4 text-danger"><%= message %></h5>

                <%  } %>

                  <form class="mx-1 mx-md-4 m" method="post">
   
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="form3Example1c" name="name" class="form-control" placeholder="Enter user name" />
                        <label class="form-label" for="form3Example1c">User Name</label>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="email" id="form3Example3c" name="email" class="form-control" placeholder="Enter user email"/>
                        <label class="form-label" for="form3Example3c">User Email</label>
                      </div>
                    </div>
  
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="number" id="form3Example4cd" name="phone" class="form-control" placeholder="Enter User Mobile"/>
                        <label class="form-label" for="form3Example4cd">Phone</label>
                      </div>
                    </div>
  
    
  
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-primary btn-lg">Add User</button>
                    </div>
  
                  </form>
  

                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
    
  <%-include('../layouts/footer')-%>

